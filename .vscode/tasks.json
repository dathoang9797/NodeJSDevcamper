{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker: compose up",
      "type": "shell",
      "command": "docker compose up -d && docker compose logs -f api",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^(.*)$", // 1 group
          "file": 1, // chỉ để thỏa yêu cầu cấu trúc
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".+",
          "endsPattern": "Debugger listening|Server running|Listening on|Ready"
        }
      }
    },
    {
      "label": "docker: compose stop",
      "type": "shell",
      "command": "docker compose stop",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}